<Window x:Class="Proyecto_TFG.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Proyecto_TFG"
        mc:Ignorable="d"
        Background="{StaticResource fondo}"  Width="auto" Height="auto">


<StackPanel Visibility="Visible">
        <StackPanel.Background>
            <SolidColorBrush Color="Black" Opacity="0.2"/>
        </StackPanel.Background>
        <StackPanel Width="1000" Height="800">
            <ContentControl Content="{Binding SelectedViewModel}" Margin="30" />
        </StackPanel>
    </StackPanel>

</Window>
