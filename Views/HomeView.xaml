<UserControl x:Class="Proyecto_TFG.Views.HomeView"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:Proyecto_TFG.Views"
             mc:Ignorable="d" 
             d:DesignHeight="600" d:DesignWidth="950">
    <UserControl.Background>
        <SolidColorBrush Color="#FFBF0549" Opacity="0.5"/>
    </UserControl.Background>
    <StackPanel>
        <TextBlock Text="" TextAlignment="Center" FontSize="40" FontWeight="SemiBold" Foreground="White"/>
        <Grid>
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="200"/>
                <ColumnDefinition Width="257*"/>
                <ColumnDefinition Width="493*"/>
            </Grid.ColumnDefinitions>
            <StackPanel Grid.Column="0" Width="200" Height="380" Orientation="Vertical" VerticalAlignment="Top" Margin="0,61,0,0">
                <StackPanel.Background>
                    <SolidColorBrush Color="#FF221D3A" Opacity="0.5"/>
                </StackPanel.Background>

                <Button x:Name="outboundsbt"  Grid.ColumnSpan="2" Grid.Row="1"  VerticalAlignment="Center" Content="Outbounds" 
                 Width="180" FontSize="15" FontWeight="Bold" Foreground="White" Margin="10" 
                Command="{Binding UpdateViewCommandV2}" CommandParameter="outbound" Cursor="Hand" BorderBrush="#FF3A8CB7"
                        >
                    <Button.Background>
                        <SolidColorBrush  Color="#FF05B2BF" Opacity="0.5"/>
                    </Button.Background>
                </Button>
                <Button x:Name="inboundsbt" Grid.ColumnSpan="2" Grid.Row="1"  VerticalAlignment="Center" Content="Inbounds" 
                 Width="180" FontSize="15" FontWeight="Bold" Foreground="White" Margin="10" 
                Command="{Binding UpdateViewCommandV2}" CommandParameter="inbounds" Cursor="Hand" BorderBrush="#FF3A8CB7"
                        >
                    <Button.Background>
                        <SolidColorBrush  Color="#FF05B2BF" Opacity="0.5"/>
                    </Button.Background>
                </Button>

                <Button x:Name="inventorybt" Grid.ColumnSpan="2" Grid.Row="1"  VerticalAlignment="Center" Content="Inventory" 
                 Width="180" FontSize="15" FontWeight="Bold" Foreground="White" Margin="10" 
                Command="{Binding UpdateViewCommandV2}" CommandParameter="inventory" Cursor="Hand" BorderBrush="#FF3A8CB7"
                        >
                    <Button.Background>
                        <SolidColorBrush  Color="#FF05B2BF" Opacity="0.5"/>
                    </Button.Background>
                </Button>

                <Button x:Name="clientsbt" Grid.ColumnSpan="2" Grid.Row="1"  VerticalAlignment="Center" Content="Clients" 
                 Width="180" FontSize="15" FontWeight="Bold" Foreground="White" Margin="10" 
                Command="{Binding UpdateViewCommandV2}" CommandParameter="clients" Cursor="Hand" BorderBrush="#FF3A8CB7"
                        >
                    <Button.Background>
                        <SolidColorBrush  Color="#FF05B2BF" Opacity="0.5"/>
                    </Button.Background>
                </Button>

                <Button x:Name="suppliersbt"  Grid.ColumnSpan="2" Grid.Row="1"  VerticalAlignment="Center" Content="Suppliers" 
                 Width="180" FontSize="15" FontWeight="Bold" Foreground="White" Margin="10" 
                Command="{Binding UpdateViewCommandV2}" CommandParameter="suppliers" Cursor="Hand" BorderBrush="#FF3A8CB7"
                        >
                    <Button.Background>
                        <SolidColorBrush  Color="#FF05B2BF" Opacity="0.5"/>
                    </Button.Background>
                </Button>

                <Button x:Name="employeesbt"  Grid.ColumnSpan="2" Grid.Row="1"  VerticalAlignment="Center" Content="Employees" 
                 Width="180" FontSize="15" FontWeight="Bold" Foreground="White" Margin="10" 
                Command="{Binding UpdateViewCommandV2}" CommandParameter="users" Cursor="Hand" BorderBrush="#FF3A8CB7"
                        >
                    <Button.Background>
                        <SolidColorBrush  Color="#FF05B2BF" Opacity="0.5"/>
                    </Button.Background>
                </Button>




            </StackPanel>



            <StackPanel Grid.Column="1" Width="750" Grid.ColumnSpan="2">
                <ContentControl Content="{Binding SelectedViewModel}" Margin="30" />
            </StackPanel>
        </Grid>


    </StackPanel>

</UserControl>
